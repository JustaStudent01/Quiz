<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuUser">

    <Button
        android:id="@+id/btnAccount"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/none"
        android:foreground="@android:drawable/ic_menu_sort_by_size"
        android:foregroundGravity="center|fill"
        android:text='@string/noText'
        android:textColor="#00FFFFFF"
        app:iconSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:hint="@string/username"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/btnAccount"
        app:layout_constraintEnd_toStartOf="@+id/btnAccount"
        app:layout_constraintTop_toTopOf="@+id/btnAccount" />
</androidx.constraintlayout.widget.ConstraintLayout>